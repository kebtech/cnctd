{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "devPath": "http://192.168.1.7:5050",
    "distDir": "../werk_server/static"
  },
  "package": {
    "productName": "cnctd",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "window": {
        "all": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "clipboard": {
        "all": true,
        "writeText": true,
        "readText": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      }
    },
    "macOSPrivateApi": true,
    "bundle": {
      "active": true,
      "category": "Music",
      "copyright": "2022 kebTech, LLC",
      "deb": {
        "depends": ["*"]
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "world.cnctd.desktop",
      "longDescription": "",
      "macOS": {
        "entitlements": "Entitlements.plist",
        "exceptionDomain": null,
        "frameworks": [],
        "providerShortName": null
      },
      "resources": ["recordings"],
      "shortDescription": "organize your songwriting",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": {
        "default-src": "blob: data: filesystem: ws: wss: http: https: tauri: tauri://localhost 'unsafe-eval' 'unsafe-inline' 'self' asset: https://asset.localhost", 
        "script-src": "'unsafe-eval'", 
        "media-src": "asset: https://asset.localhost tauri://localhost asset://localhost https://cnctd.world https://werkfiles.s3.amazonaws.com data:",
        "Access-Control-Allow-Origin": "tauri://localhost asset://localhost asset: https://asset.localhost"
      }
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "cnctd",
        "width": 1200,
        "theme": "Dark",
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "transparent": true
      }
    ]
  }
}
