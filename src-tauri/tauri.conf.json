{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "devPath": "http://192.168.1.7:5050",
    "distDir": "../werk_server/static"
  },
  "package": {
    "productName": "cnctd",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "window": {
        "all": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "scope": ["**"]
      },
      "clipboard": {
        "all": true,
        "writeText": true,
        "readText": true
      }
    },
    "macOSPrivateApi": true,
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "world.cnctd.desktop",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "cnctd",
        "width": 1200,
        "theme": "Dark",
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "transparent": true
      }
    ]
  }
}
